<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="userService" class="com.owlunit.service.mock.UserServiceMock"/>

    <bean id="moviesStoryUserService" class="com.owlunit.moviesstory.service.MoviesStoryUserServiceMock"/>

    <bean id="facebookIntegrationService" class="com.owlunit.moviesstory.service.FacebookIntegrationServiceMock"/>

    <bean id="moviesstoryService" class="com.owlunit.moviesstory.service.MoviesStoryServiceImpl">
        <constructor-arg index="0" ref="facebookIntegrationService"/>
        <constructor-arg index="1" ref="movieService"/>
        <constructor-arg index="2" ref="moviesStoryUserService"/>
    </bean>

    <bean id="movieService" class="com.owlunit.service.mock.MovieServiceMock"/>

    <bean id="personService" class="com.owlunit.service.mock.PersonServiceMock"/>

    <bean id="posterService" class="com.owlunit.service.mock.PosterServiceMock">
        <constructor-arg index="0" value="http"/>
        <constructor-arg index="1" value="nest1"/>
        <constructor-arg index="2" value="8080"/>
        <constructor-arg index="3" value="/ex-api-1.0"/>
    </bean>

</beans>