<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- - - - - - - - - - - - - - - - - -
    |  M O C K E D  O W L S   B E A N S   |
    \===================================-->

    <bean id="userService" class="com.manymonkeys.service.mock.UserServiceMock"/>

    <bean id="movieService" class="com.manymonkeys.service.mock.MovieServiceMock"/>

    <bean id="personService" class="com.manymonkeys.service.mock.PersonServiceMock"/>

    <bean id="posterService" class="com.manymonkeys.service.mock.PosterServiceMock">
        <constructor-arg index="0" value="http"/>
        <constructor-arg index="1" value="tytoalba.ru"/>
        <constructor-arg index="2" value="8080"/>
        <constructor-arg index="3" value="ex-api-1.0"/>
    </bean>

</beans>