<?xml version="1.0" encoding="UTF-8"?>
<project name="ii-crawl" basedir="."> <!-- default="crawl-movielens" -->

    <target name="crawl-movielens-movies">
        <echo>
            crawling movies from movielens
        </echo>

        <java classname="com.manymonkeys.crawlers.movielens.MovieLensMoviesParser" fork="true" failonerror="true"
              maxmemory="512m">
            <classpath>
                <fileset dir="./target">
                    <include name="*.jar"/>
                </fileset>
            </classpath>
        </java>

        <echo>
            Fuck yeah!
        </echo>
    </target>

    <target name="crawl-movielens-tags">
        <echo>
