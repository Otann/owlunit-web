package com.tomtom.security.shiro.aspectj;

import com.tomtom.security.shiro.annotation.MUID;
import com.tomtom.security.shiro.annotation.RequireDeviceAssociation;

import java.sql.Timestamp;

/**
 * TomTom International BV Proprietary
 *
 * @author Ilya Pimenov
 */
public class AnnotatedServiceImpl implements AnnotatedService {

    @RequireDeviceAssociation()
    public void annotatedMethod() {
        log("executed annotatedMethod");
    }

    public void annotatedArgument(@MUID String arg1) {
        log("executed annotatedArgument");
    }

    public void annotatedSecondArgument(String arg1, @MUID String arg2) {
        log("executed annotatedSecondArgument");
    }

    public void annotatedThirdArgument(String arg1, String arg2, @MUID String arg3) {
        log("executed annotatedThirdArgument");
    }

    public void annotatedFourthArgument(String arg1, String arg2, String arg3, @MUID String arg4) {
        log("executed annotatedFourthArgument");
    }

    public void annotatedFifthArgument(String arg1, String arg2, String arg3, String arg4, @MUID String arg5) {
        log("executed annotatedFifthArgument");
    }

    public void log(String aMessage) {
        if (aMessage != null) {
            System.out.println(new Timestamp(System.currentTimeMillis()).toString() + " [" + Thread.currentThread() + "] * LOG * " + aMessage);
        } else {
            System.out.println("\n\n");
        }
    }
}
