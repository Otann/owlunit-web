package com.tomtom.security.shiro.annotation;

import java.lang.annotation.ElementType;
import java.lang.annotation.Retention;
import java.lang.annotation.RetentionPolicy;
import java.lang.annotation.Target;

/**
 * TomTom International BV Proprietary
 * <p/>
 * Requires the current executor's Subject to check device id against it's belonging user.
 * If the executor's associated {@link org.apache.shiro.subject.Subject Subject} determines
 * that the executor does not have such a device, the method will not be executed.
 * <p>Example:
 * <code>&#64;RequireDeviceAssociation()<br/>
 * void someMethod();</code>
 *
 * @author Ilya Pimenov
 * @since 0.00.000
 */
@Target({ElementType.TYPE, ElementType.METHOD})
@Retention(RetentionPolicy.RUNTIME)
public @interface RequireDeviceAssociation {
}
