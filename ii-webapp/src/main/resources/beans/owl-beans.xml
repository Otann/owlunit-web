<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <alias name="neoDao" alias="dao"/>

    <!--<bean id="cassandraDao" class="com.manymonkeys.core.ii.impl.cassandra.CassandraIiDaoHectorImpl">-->
    <!--<constructor-arg name="keyspace" ref="keyspace"/>-->
    <!--</bean>-->

    <bean id="neoDao" class="com.manymonkeys.core.ii.impl.neo4j.NeoIiDaoImpl">
        <constructor-arg ref="graphDbService"/>
    </bean>

    <bean id="plainRecommender" class="com.manymonkeys.core.algo.impl.RecommenderPlainImpl">
        <property name="componentsLimit" value="75"/>
        <property name="parentsLimit" value="100"/>
        <property name="weightThreshold" value="2.1"/>
    </bean>

    <bean id="userService" class="com.manymonkeys.service.impl.UserServiceImpl">
        <property name="dao" ref="dao"/>
    </bean>

    <bean id="invitedUserService" class="com.manymonkeys.moviesstory.service.InvitedUserServiceImpl">
        <property name="dao" ref="dao"/>
    </bean>

    <bean id="facebookIntegrationService" class="com.manymonkeys.moviesstory.service.FacebookIntegrationServiceImpl">
        <constructor-arg index="0" value="171270759653943"/>
        <constructor-arg index="1" value="fec810ed9d22d311ce60323e583e2eae"/>
        <constructor-arg index="2" value="http://tempowl.com:8080/ii-weapp/application/page/invite-landing-page.htm"/>
    </bean>

    <bean id="movieService" class="com.manymonkeys.service.impl.MovieServiceImpl">
        <property name="dao" ref="dao"/>
        <property name="recommender" ref="plainRecommender"/>

        <!-- Todo NB: move to one place configuration, should be done before first release -->
        <property name="initialKeywordWeight" value="15"/>
        <property name="initialPersonWeight" value="25"/>
    </bean>

    <bean id="personService" class="com.manymonkeys.service.impl.PersonServiceImpl">
        <property name="dao" ref="dao"/>
    </bean>

    <bean id="posterService" class="com.manymonkeys.service.impl.PosterServiceImpl"/>

</beans>